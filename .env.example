# API Configuration
# Required: API key for authenticating requests
API_KEY=your_secret_api_key_here

# Server Configuration
# Optional: Port number for the server (default: 5000)
PORT=5000

# Browser Configuration
# Optional: Run browser in headless mode (default: true)
# Set to 'false' to see the browser window
HEADLESS=true

# Webhook Configuration
# Required for job queue webhook callbacks
# Used to sign webhook payloads with HMAC-SHA256
WEBHOOK_SECRET=your_webhook_secret_here

# WhatsApp Error Reporting (Optional)
# Configure these if you want error notifications via WhatsApp
WHATSAPP_API=https://your-whatsapp-api-endpoint.com/send
WHATSAPP_APPKEY=your_app_key
WHATSAPP_AUTHKEY=your_auth_key
WHATSAPP_TO=phone_number_to_send_errors

# ============================================
# HTML Storage Configuration
# ============================================
# Storage type: 'local' for filesystem, 'cloud' for BeDrive
STORAGE_TYPE=local

# Local Storage Settings (only applies when STORAGE_TYPE=local)
ENABLE_LOCAL_CLEANUP=true      # Enable automatic cleanup of old files
CLEANUP_INTERVAL_HOURS=6       # Run cleanup every X hours
CLEANUP_MAX_AGE_HOURS=24       # Delete files older than X hours

# BeDrive Cloud Storage (only needed when STORAGE_TYPE=cloud)
# Get these credentials from your BeDrive instance
BEDRIVE_URL=https://your-bedrive-instance.com
BEDRIVE_API_KEY=your_bedrive_api_key_here
BEDRIVE_FOLDER_ID=scraped_html
