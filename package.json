{
  "name": "localbrowser-playwright",
  "version": "1.0.0",
  "description": "Playwright browser automation server",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "node index.js",
    "dev": "nodemon --exec ts-node index.js",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --passWithNoTests",
    "test:ci": "jest --coverage --passWithNoTests --ci --reporters=default",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.js,.json",
    "lint:fix": "eslint . --ext .ts,.js,.json --fix",
    "format": "prettier --write \"**/*.ts\" \"**/*.js\" \"**/*.json\" \"**/*.md\"",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch"
  },
  "keywords": ["playwright", "browser", "automation"],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "better-sqlite3": "^12.2.0",
    "dotenv": "^17.0.0",
    "eslint-plugin-jest": "^29.13.0",
    "express": "^5.1.0",
    "lighthouse": "^13.0.1",
    "typescript": "^5.9.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.0.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.2.7",
    "nodemon": "^3.1.11",
    "playwright": "^1.53.2",
    "prettier": "^3.8.1",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2"
  }
}
