#!/bin/sh
# husky

# Get the directory where this script is located
SCRIPT_DIR="$(cd "$(dirname "$0")" && pwd)"

# Exit if git repo not found
git rev-parse --git-dir > /dev/null 2>&1 || exit 0

# Run lint-staged
npx lint-staged

# Store the exit code
exit_code=$?

# Exit with the lint-staged exit code
exit $exit_code
